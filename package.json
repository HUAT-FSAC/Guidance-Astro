{
    "name": "huat-fsac-docs",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev",
        "start": "astro dev",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro",
        "clean": "rimraf .astro dist",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write \"{src,.config,tests}/**/*.{ts,tsx,css,json,mjs}\" \"*.{json,mjs,ts}\"",
        "format:check": "prettier --check \"{src,.config,tests}/**/*.{ts,tsx,css,json,mjs}\" \"*.{json,mjs,ts}\"",
        "test": "vitest",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:e2e": "playwright test",
        "quality:bundle": "node scripts/quality/check-bundle-budget.mjs",
        "quality:lighthouse": "lhci collect --config=.config/lighthouserc.json && lhci assert --config=.config/lighthouserc.json",
        "metrics:collect": "node scripts/metrics/collect-github-metrics.mjs",
        "prepare": "husky"
    },
    "dependencies": {
        "@astrojs/starlight": "^0.37.1",
        "astro": "^5.17.3",
        "qrcode": "^1.5.4",
        "sharp": "^0.34.5"
    },
    "pnpm": {
        "overrides": {
            "minimatch@<3.1.3": ">=3.1.3",
            "minimatch@>=9.0.0 <9.0.6": ">=9.0.6",
            "ajv@<6.14.0": ">=6.14.0"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "^20.4.2",
        "@commitlint/config-conventional": "^20.4.2",
        "@playwright/test": "^1.58.2",
        "@types/qrcode": "^1.5.6",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@vitest/coverage-v8": "^4.0.18",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-astro": "^1.2.3",
        "husky": "^9.0.11",
        "jsdom": "^28.1.0",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "rimraf": "^6.1.3",
        "typescript-eslint": "^7.18.0",
        "vitest": "^4.0.18"
    }
}
