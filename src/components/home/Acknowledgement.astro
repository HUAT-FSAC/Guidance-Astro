        color: var(--sl-color-gray-2);
        font-size: 1.05rem;
    }

    .ack-content p {
        margin-bottom: 1.5rem;
        text-align: justify;
    }

    .ack-content strong {
        color: var(--sl-color-accent);
        font-weight: 600;
    }

    .ack-quote {
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
        color: var(--sl-color-accent);
        margin: 2rem 0;
