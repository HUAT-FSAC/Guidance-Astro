---
interface Props {
    title: string;
    subtitle: string;
    description: string;
    ctaText: string;
    ctaLink: string;
    backgroundImage?: string;
}

const { title, subtitle, description, ctaText, ctaLink, backgroundImage } =
    Astro.props;

function optimizeImageUrl(url: string, width: number) {
    if (url.includes("unsplash.com")) {
        const base = url.split("?")[0];
        return `${base}?fm=webp&w=${width}&q=80`;
    }
    return url;
}

const largeBg = backgroundImage
    ? optimizeImageUrl(backgroundImage, 1600)
    : "";
const smallBg = backgroundImage
    ? optimizeImageUrl(backgroundImage, 900)
    : "";
const bgStyle = backgroundImage
    ? `--hero-bg: url(${largeBg}); --hero-bg-mobile: url(${smallBg});`
    : "";
---

<section class="hero-v2" role="region" aria-label="Hero">
    <div class="hero-bg" style={bgStyle}></div>
    <div class="hero-overlay"></div>

    <div class="hero-inner">
        <div class="hero-label">FORMULA STUDENT</div>
        <h1 class="hero-heading">{title}</h1>
        {subtitle && <div class="hero-sub">{subtitle}</div>}
        {description && <p class="hero-desc">{description}</p>}

        <a class="hero-cta" href={ctaLink} role="button">
            <span class="hero-cta-text">{ctaText}</span>
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M5 12h14"></path>
                <path d="M12 5l7 7-7 7"></path>
            </svg>
        </a>
    </div>
</section>

<style>
    .hero-v2 {
        position: relative;
        padding: 6rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        border-radius: 1rem;
        margin: 2rem auto;
        max-width: 1400px;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
    }

    :global([data-theme="light"]) .hero-v2 {
        background: linear-gradient(135deg, #f5f7fa 0%, #e9eef8 100%);
    }

    .hero-bg {
        position: absolute;
        inset: 0;
        background-image: var(--hero-bg);
        background-size: cover;
        background-position: center;
        opacity: 0.18;
        pointer-events: none;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            rgba(0, 0, 0, 0),
            rgba(0, 0, 0, 0.05)
        );
        pointer-events: none;
    }

    :global([data-theme="light"]) .hero-overlay {
        background: linear-gradient(
            180deg,
            rgba(255, 255, 255, 0),
            rgba(255, 255, 255, 0.6)
        );
    }

    .hero-inner {
        position: relative;
        z-index: 3;
        text-align: center;
        padding: 3rem 2rem;
        max-width: 900px;
    }

    .hero-label {
        color: var(--sl-color-accent, #4752ff);
        font-weight: 700;
        letter-spacing: 4px;
        text-transform: uppercase;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .hero-heading {
        font-size: clamp(2rem, 4.5vw, 3.5rem);
        margin: 0 0 1rem 0;
        font-weight: 800;
        color: var(--sl-color-text, #ffffff);
    }

    :global([data-theme="light"]) .hero-heading {
        color: var(--sl-color-text);
    }

    .hero-sub {
        color: var(--sl-color-accent, #f39c12);
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .hero-desc {
        color: rgba(255, 255, 255, 0.9);
        margin: 0 auto 2rem auto;
        max-width: 720px;
        line-height: 1.7;
    }

    :global([data-theme="light"]) .hero-desc {
        color: var(--sl-color-text-gray);
    }

    .hero-cta {
        display: inline-flex;
        align-items: center;
        gap: 0.6rem;
        padding: 1rem 2.2rem;
        border-radius: 0.6rem;
        background: var(--sl-color-accent, #4752ff);
        color: #fff !important;
        text-decoration: none;
        font-weight: 700;
        transition: all 0.24s ease;
        box-shadow: 0 8px 28px rgba(71, 82, 255, 0.18);
    }

    :global([data-theme="light"]) .hero-cta {
        color: #000 !important;
    }

    .hero-cta:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 36px rgba(71, 82, 255, 0.24);
        background: #fff;
    }

    @media (max-width: 900px) {
        .hero-v2 {
            padding: 4rem 1.5rem;
        }
        .hero-heading {
            font-size: 2.5rem;
        }
        .hero-bg {
            background-image: var(--hero-bg-mobile, var(--hero-bg));
        }
    }

    @media (max-width: 480px) {
        .hero-v2 {
            padding: 3rem 1rem;
            margin: 1rem auto;
        }
        .hero-inner {
            padding: 1.5rem 1rem;
        }
        .hero-heading {
            font-size: 2rem;
        }
        .hero-desc {
            font-size: 0.95rem;
        }
        .hero-cta {
            width: 100%;
            justify-content: center;
        }
    }
</style>
