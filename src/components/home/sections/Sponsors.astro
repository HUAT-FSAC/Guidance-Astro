---
import type { SponsorGroup, SponsorItem } from "../../../data/home";
import { getImageLoadingStrategy, getImageFetchPriority } from "../../../utils/image-optimization";

interface Props {
    groups: SponsorGroup[];
}

const { groups } = Astro.props;

const loading = getImageLoadingStrategy(false);
const fetchPriority = getImageFetchPriority(false);
---

{
    groups.map((group: SponsorGroup) => (
        <div class="sponsor-section">
            <h3>{group.name}</h3>
            <div class="sponsor-grid">
                {group.items.map((sponsor: SponsorItem) => (
                    <div class="sponsor-card">
                        <div class="sponsor-image-container">
                            <img
                                src={sponsor.logo}
                                alt={sponsor.title}
                                class="sponsor-logo"
                                loading={loading}
                                fetchpriority={fetchPriority}
                                decoding="async"
                            />
                        </div>
                        <span class="sponsor-name">{sponsor.title}</span>
                    </div>
                ))}
            </div>
        </div>
    ))
}

<style>
    .sponsor-section {
        position: relative;
        z-index: 2;
        text-align: center;
        margin: 4rem 0;
    }

    .sponsor-section h3 {
        opacity: 0.9;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 1.1rem;
        margin-bottom: 2rem;
        color: var(--sl-color-white);
    }

    .sponsor-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        align-items: flex-start;
    }

    .sponsor-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        width: 160px;
        transition: transform 0.3s ease;
    }
    
    .sponsor-card:hover {
        transform: translateY(-5px);
    }

    .sponsor-image-container {
        width: 100%;
        height: 100px;
        background: #ffffff;
        border-radius: 12px;
        padding: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 2px solid transparent;
        transition: all 0.3s ease;
    }

    /* 适配浅色模式 */
    :global([data-theme="light"]) .sponsor-image-container {
        background: #ffffff;
        border: 1px solid rgba(0, 0, 0, 0.05);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .sponsor-logo {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
        object-fit: contain;
        filter: none;
        opacity: 1;
    }

    .sponsor-name {
        font-size: 0.9rem;
        color: var(--sl-color-gray-3);
        font-weight: 500;
        line-height: 1.3;
        text-align: center;
        transition: color 0.3s ease;
    }
    
    :global([data-theme="light"]) .sponsor-name {
        color: var(--sl-color-gray-2);
    }

    .sponsor-card:hover .sponsor-image-container {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        border-color: var(--sl-color-accent);
    }
    
    .sponsor-card:hover .sponsor-name {
        color: var(--sl-color-white);
    }
    
    :global([data-theme="light"]) .sponsor-card:hover .sponsor-name {
        color: var(--sl-color-accent);
    }

    @media (max-width: 768px) {
        .sponsor-grid {
            gap: 1.5rem;
        }

        .sponsor-card {
            width: 130px;
        }

        .sponsor-image-container {
            height: 80px;
            padding: 10px;
        }
        
        .sponsor-name {
            font-size: 0.85rem;
        }
    }
</style>
