---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
    date?: string;
}

const { title, description, image, link, date } = Astro.props;

// 优化 Unsplash 图片 URL
function optimizeImageUrl(url: string): string {
    if (url.includes("unsplash.com")) {
        const base = url.split("?")[0];
        return `${base}?fm=webp&w=600&q=80`;
    }
    return url;
}

const optimizedImage = optimizeImageUrl(image);
---

<a href={link} class="news-card">
    <div class="news-image">
        <div class="image-placeholder"></div>
        <img
            src={optimizedImage}
            alt={title}
            loading="lazy"
            decoding="async"
            onload="this.parentElement.classList.add('loaded')"
        />
    </div>
    <div class="news-content">
        {date && <span class="news-date">{date}</span>}
        <h3 class="news-title">{title}</h3>
        <p class="news-description">{description}</p>
    </div>
</a>

<style>
    .news-card {
        display: flex;
        flex-direction: column;
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border-radius: 1.5rem;
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
        border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .news-card:hover {
        transform: translateY(-8px) scale(1.02);
        border-color: rgba(255, 255, 255, 0.2);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
    }

    .news-image {
        aspect-ratio: 16/9;
        overflow: hidden;
        position: relative;
        background: rgba(255, 255, 255, 0.03);
    }

    .image-placeholder {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            90deg,
            rgba(255, 255, 255, 0.03) 0%,
            rgba(255, 255, 255, 0.08) 50%,
            rgba(255, 255, 255, 0.03) 100%
        );
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
    }

    @keyframes shimmer {
        0% {
            background-position: 200% 0;
        }
        100% {
            background-position: -200% 0;
        }
    }

    .news-image.loaded .image-placeholder {
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .news-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition:
            transform 0.5s ease,
            opacity 0.5s ease;
        opacity: 0;
    }

    .news-image.loaded img {
        opacity: 1;
    }

    .news-card:hover .news-image img {
        transform: scale(1.1);
    }

    .news-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .news-date {
        font-size: 0.8rem;
        color: var(--sl-color-accent, #f39c12);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .news-title {
        font-size: 1.25rem;
        font-weight: 700;
        line-height: 1.3;
        margin: 0;
        color: var(--sl-color-white);
    }

    .news-description {
        font-size: 0.9rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
