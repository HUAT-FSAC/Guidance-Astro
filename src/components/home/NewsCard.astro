---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
    date?: string;
}

const { title, description, image, link, date } = Astro.props;
---

<a href={link} class="news-card">
    <div class="news-image">
        <img src={image} alt={title} loading="lazy" />
    </div>
    <div class="news-content">
        {date && <span class="news-date">{date}</span>}
        <h3 class="news-title">{title}</h3>
        <p class="news-description">{description}</p>
    </div>
</a>

<style>
    .news-card {
        display: flex;
        flex-direction: column;
        background: var(--sl-color-gray-6, #1a1a1a);
        border-radius: 1rem;
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }

    .news-card:hover {
        transform: translateY(-8px);
        border-color: var(--sl-color-accent, #f39c12);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .news-image {
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .news-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .news-card:hover .news-image img {
        transform: scale(1.1);
    }

    .news-content {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .news-date {
        font-size: 0.8rem;
        color: var(--sl-color-accent, #f39c12);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .news-title {
        font-size: 1.25rem;
        font-weight: 700;
        line-height: 1.3;
        margin: 0;
        color: var(--sl-color-white);
    }

    .news-description {
        font-size: 0.9rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.7);
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
