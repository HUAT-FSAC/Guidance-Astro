---
interface Props {
    title: string;
    subtitle: string;
    description: string;
    ctaText: string;
    ctaLink: string;
    backgroundImage?: string;
}

const { title, subtitle, description, ctaText, ctaLink, backgroundImage } =
    Astro.props;

// 优化背景图片 URL（支持 Unsplash WebP 格式）
function optimizeBgImage(url?: string): string {
    if (!url) return "";
    if (url.includes("unsplash.com")) {
        const base = url.split("?")[0];
        return `${base}?fm=webp&w=1920&q=85`;
    }
    return url;
}

const optimizedBg = optimizeBgImage(backgroundImage);
---

<section class="hero">
    <div class="hero-bg-wrapper">
        <img
            src={optimizedBg}
            alt=""
            class="hero-bg-image"
            loading="eager"
            decoding="async"
            onload="this.parentElement.classList.add('loaded')"
        />
    </div>
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="hero-title">
            <span class="typewriter" data-text={title}></span>
        </h1>
        <p class="hero-subtitle">{subtitle}</p>
        <p class="hero-description">{description}</p>
        <a href={ctaLink} class="hero-cta">{ctaText}</a>
    </div>
    <div class="hero-scroll-indicator">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
        >
            <path d="M12 5v14M19 12l-7 7-7-7"></path>
        </svg>
    </div>
</section>

<script>
    // 合并初始化，增加 init guard、命名处理器与 cleanup
    function initHero() {
        if (typeof document === "undefined") return;
        const hero = document.querySelector(".hero") as HTMLElement;
        if (!hero) return;

        // 防止重复初始化
        if ((hero as any).dataset?.huatInit === "1") return;
        (hero as any).dataset.huatInit = "1";

        // 打字机效果（可清理的定时器）
        const typewriters = Array.from(
            document.querySelectorAll(".typewriter"),
        ) as HTMLElement[];
        const timeoutIds: number[] = [];

        typewriters.forEach((el) => {
            const text = (el as HTMLElement).dataset.text || "";
            let index = 0;
            el.textContent = "";

            function type() {
                if (index < text.length) {
                    el.textContent += text.charAt(index);
                    index++;
                    const id = window.setTimeout(type, 120);
                    timeoutIds.push(id);
                }
            }

            const startId = window.setTimeout(type, 800);
            timeoutIds.push(startId);
        });

        // 视差滚动效果（具名处理器）
        const bgImage = document.querySelector(
            ".hero-bg-image",
        ) as HTMLElement | null;
        const heroContent = document.querySelector(
            ".hero-content",
        ) as HTMLElement | null;

        function onScroll() {
            if (!bgImage || !heroContent) return;
            const scrollY = window.scrollY;
            const heroHeight =
                document.querySelector(".hero")?.clientHeight || 0;

            if (scrollY < heroHeight) {
                bgImage.style.transform = `scale(1) translateY(${scrollY * 0.3}px)`;
                heroContent.style.transform = `translateY(${scrollY * 0.5}px)`;
                heroContent.style.opacity = `${1 - scrollY / heroHeight}`;
            }
        }

        if (bgImage && heroContent) {
            window.addEventListener("scroll", onScroll, { passive: true });
            // 初始化一次
            onScroll();
        }

        // cleanup
        function cleanup() {
            // clear timeouts
            timeoutIds.forEach((id) => clearTimeout(id));
            // remove scroll listener
            try {
                window.removeEventListener("scroll", onScroll as EventListener);
            } catch (e) {}
            try {
                delete (hero as any).dataset.huatInit;
            } catch (e) {}
            try {
                delete (hero as any).__huatCleanup;
            } catch (e) {}
        }

        (hero as any).__huatCleanup = cleanup;
        window.addEventListener("beforeunload", cleanup);
    }

    document.addEventListener("DOMContentLoaded", () => {
        initHero();
    });
    document.addEventListener("astro:page-load", () => {
        initHero();
    });
</script>

<style>
    .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--sl-color-bg);
        overflow: hidden;
    }

    .hero-bg-wrapper {
        position: absolute;
        inset: 0;
        overflow: hidden;
    }

    .hero-bg-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        transform: scale(1.1);
        transition:
            opacity 1s ease,
            transform 10s ease;
    }

    .hero-bg-wrapper.loaded .hero-bg-image {
        opacity: 1;
        transform: scale(1);
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            180deg,
            rgba(0, 0, 0, 0.7) 0%,
            rgba(0, 0, 0, 0.5) 50%,
            rgba(0, 0, 0, 0.8) 100%
        );
    }

    :global([data-theme="light"]) .hero-overlay {
        background: linear-gradient(
            180deg,
            rgba(255, 255, 255, 0.7) 0%,
            rgba(255, 255, 255, 0.5) 50%,
            rgba(255, 255, 255, 0.8) 100%
        );
    }

    .hero-content {
        position: relative;
        z-index: 1;
        text-align: center;
        max-width: 900px;
        padding: 2rem;
    }

    .hero-title {
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 900;
        line-height: 1.1;
        margin-bottom: 1rem;
        color: var(--sl-color-text);
        text-transform: uppercase;
        letter-spacing: -2px;
        text-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        min-height: 1.2em;
    }

    :global([data-theme="light"]) .hero-title {
        text-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* 打字机光标效果 */
    .typewriter {
        display: inline;
        border-right: 3px solid var(--sl-color-accent, #f39c12);
        animation: blink 0.8s infinite;
    }

    @keyframes blink {
        0%,
        50% {
            border-color: var(--sl-color-accent, #f39c12);
        }
        51%,
        100% {
            border-color: transparent;
        }
    }

    .hero-subtitle {
        font-size: clamp(1.2rem, 3vw, 1.8rem);
        font-weight: 700;
        color: var(--sl-color-accent, #f39c12);
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 4px;
        opacity: 0;
        animation: slideUp 0.8s ease-out forwards 0.4s;
    }

    .hero-description {
        font-size: clamp(1.1rem, 2vw, 1.35rem);
        color: var(--sl-color-text);
        opacity: 0.9;
        max-width: 650px;
        margin: 0 auto 2.5rem;
        line-height: 1.7;
        opacity: 0;
        animation: slideUp 0.8s ease-out forwards 0.6s;
    }

    .hero-cta {
        display: inline-block;
        padding: 1rem 2.5rem;
        background: var(--sl-color-accent, #f39c12);
        color: #000;
        font-weight: 700;
        text-decoration: none;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
        opacity: 0;
        animation: slideUp 0.8s ease-out forwards 0.8s;
        box-shadow: 0 4px 15px rgba(243, 156, 18, 0.4);
    }

    .hero-cta:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(243, 156, 18, 0.6);
        background: #fff;
    }

    .hero-scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        color: var(--sl-color-text);
        opacity: 0.5;
        animation: bounce 2s infinite;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes bounce {
        0%,
        20%,
        50%,
        80%,
        100% {
            transform: translateX(-50%) translateY(0);
        }
        40% {
            transform: translateX(-50%) translateY(-10px);
        }
        60% {
            transform: translateX(-50%) translateY(-5px);
        }
    }
</style>
